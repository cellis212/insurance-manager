# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# Makefile
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# HTML/CSS files
[*.{html,css,scss}]
indent_size = 2

# Config files
[*.{toml,ini,cfg}]
indent_size = 4 